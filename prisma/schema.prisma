generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native","rhel-openssl-3.0.x"]
}
datasource db {
 provider = "postgresql"
}
model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role String @default("USER") 
  createdAt DateTime @default(now())
}

model Category{
  id Int  @id @default(autoincrement())
  name String

  //Fields Relas (virtual)
  students Student[]
}

model Student{
  id Int @id @default(autoincrement())
  name String
  age Int
  class Int
  createdAt DateTime @default(now())

  //  Foreign Key(kolom dari id Kategory)
 categoryId Int

  //definisi relasi(prisma level)
  category Category @relation(fields: [categoryId], references: [id])

}